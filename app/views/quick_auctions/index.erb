<%= @product.name -%>
<div id="product-images">
  <div id="main-image">
    <%= render 'image' -%>
  </div>
</div>
<div id="product-description">
  <% hook :product_description do %>
    <%= product_description(@product) rescue t("product_has_no_description") %>
  <% end %>
</div>

<table border="1">
  <tr>
    <% @product.prices.each_with_index do |price,index| %>
      <%= '</tr><tr>' if index % 10 == 0 %>
      <td>
        <% if price.sold %>
          <h1><%= link_to price.price, '#', :class => 'price_change_link', :id => price.id %></h1>
        <% else %>
          <%= link_to price.price, '#', :class => 'price_change_link', :id => price.id %>
        <% end %>
      </td>
    <% end %>
  </tr>
</table>
